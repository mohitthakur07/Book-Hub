<style>
  body {
    margin: 0;
    font-family: "Bitter", serif;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1rem;
    background-color: #fff;
    box-shadow: 2px 4px 8px #17858181;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
  }

  .navbar-brand img {
    height: 80px;
    width: 80px;
  }

  .fa-book {
    margin-right: 0.5rem;
  }

  .navbar-toggler {
    font-size: 1.5rem;
    background: none;
    border: none;
    cursor: pointer;
    display: none;
  }

  .navbar-menu {
    display: flex;
    justify-content: space-between;
    flex-grow: 1;
    align-items: center;
  }

  .navbar-section {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .nav-link {
    font-size: 1.3rem;
    font-weight: 500;
    color: #333;
    margin: 0 1rem;
    text-decoration: none;
    border-radius: 16px;
    padding: 0.5rem 1rem;
    transition: background-color 0.4s ease, color 0.5s ease;
  }

  .nav-link {
    position: relative;
    color: #000000;
    text-decoration: none;
    padding: 10px;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: #178582;
  }

  /* Create the underline effect using ::after pseudo-element */
  .nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    left: 0;
    bottom: -2px;
    background-color: #178582;
    transition: width 0.3s ease;
  }

  /* On hover, the underline expands to full width */
  .nav-link:hover::after {
    width: 100%;
  }

  .active {
    background-color: #0A1828;
    color: #fff;
    font-weight: bold;
  }

  .logout {
    color: rgb(208, 66, 66);
  }



  @media (min-width: 990px) {

    .close-btn {
      display: none;
    }


  }

  /* Mobile view */
  @media (max-width: 990px) {
    .navbar-toggler {
      display: block;
    }

    .navbar-menu {
      position: absolute;
      top: 0;
      right: -100%;
      width: 70%;
      height: 100vh;
      background-color: #0A1828;
      flex-direction: column;
      align-items: flex-start;
      padding: 2rem;
      transition: right 0.4s ease;
      justify-content: flex-start;
    }

    .navbar-section {
      flex-direction: column;
      width: 100%;
      margin: 0;
      padding: 0;
    }

    .nav-link {
      margin: 0;
      color: rgb(255, 255, 255);
      width: 100%;
      text-align: center;
      box-shadow: 0px 1px 6px #000000bd;
      margin-top: 0.5rem;
    }

    .show {
      right: 0;
    }

    .logout {
      color: rgb(208, 66, 66);
    }

    .close-btn {
      font-size: 2rem;
      cursor: pointer;
      color: #ffffff;
      align-self: flex-end;
      margin-bottom: 2rem;
    }
  }
</style>
</head>

<body>

  <nav>
    <a class="navbar-brand" href="/"><img src="/css/book-hub-logo-beta.png" alt=""></a>
    <button class="navbar-toggler" aria-label="Toggle navigation">
      <i class="fas fa-bars"></i>
    </button>
    <div class="navbar-menu">
      <!-- Close button for mobile menu -->
      <span class="close-btn">&times;</span>
      <div class="navbar-section">
        <a class="nav-link <%= currentRoute === '/' ? 'active' : '' %>" href="/">Home</a>
        <a class="nav-link <%= currentRoute === '/explorebooks' ? 'active' : '' %>" href="/explorebooks">Explore
          Books</a>
        <a class="nav-link <%= currentRoute === '/addbooks/new' ? 'active' : '' %>" href="/addbooks/new">Add Your
          Book</a>
      </div>
      <div class="navbar-section">
        <% if(!curntUser) { %>
          <a class="nav-link" href="/login">Log in <i class="fa-regular fa-user"></i></a>
          <a class="nav-link" href="/signup">Sign up <i class="fa-regular fa-user"></i></a>
          <% } %>
            <% if (curntUser) { %>
              <a class="nav-link <%= currentRoute === '/yourbooks' ? " active" : '' %>" href="/yourbooks">Your Profile
                <i class="fa-solid fa-user"></i></a><a class="nav-link logout" href="/logout">Log out <i
                  class="fa-solid fa-right-from-bracket"></i></a>
              <% } %>
      </div>
    </div>
  </nav>

  <script>
    const toggler = document.querySelector(".navbar-toggler");
    const menu = document.querySelector(".navbar-menu");
    const closeBtn = document.querySelector(".close-btn");

    // Show menu on toggler click
    toggler.addEventListener("click", function () {
      menu.classList.toggle("show");
    });

    // Close menu on close button click
    closeBtn.addEventListener("click", function () {
      menu.classList.remove("show");
    });

    // Close menu when clicking outside
    document.addEventListener("click", function (event) {
      const isClickInside = menu.contains(event.target) || toggler.contains(event.target);
      if (!isClickInside) {
        menu.classList.remove("show");
      }
    });
  </script>