<% layout('/layouts/boilerplate') -%>

  <style>
    body {
      background-color: #e9ecef;
      /* Light background color */
      font-family: 'Arial', sans-serif;
      /* Simple font for readability */
    }

    .box {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      /* Full viewport height */
      padding: 20px;
    }

    .card {
      background-color: #ffffff;
      /* White background for the card */
      border-radius: 15px;
      /* Rounded corners */
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      /* Soft shadow */
      width: 100%;
      max-width: 400px;
      /* Max width for larger screens */
      padding: 20px;
      /* Padding inside the card */
      transition: transform 0.2s;
      /* Animation on hover */
    }

    .card:hover {
      transform: translateY(-5px);
      /* Lift effect on hover */
    }

    .signup-icon {
      font-size: 3rem;
      /* Larger icon size */
      color: #007bff;
      /* Primary color for the icon */
    }

    h1 {
      margin-bottom: 20px;
      /* Space below the header */
      color: #333;
      /* Darker text color for contrast */
    }

    .form-label {
      font-weight: bold;
      /* Bold labels */
      color: #555;
      /* Darker label color */
    }

    .form-control {
      border-radius: 8px;
      /* Rounded input fields */
      border: 1px solid #ced4da;
      /* Light border color */
      transition: border-color 0.3s;
      /* Smooth transition for border color */
    }

    .form-control:focus {
      border-color: #007bff;
      /* Change border color on focus */
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
      /* Shadow effect on focus */
      outline: none;
      /* Remove outline */
    }

    .btn-primary {
      background-color: #007bff;
      /* Primary button color */
      border: none;
      /* Remove border */
      border-radius: 8px;
      /* Rounded button */
      padding: 10px;
      /* Button padding */
      color: #fff;
      /* White text color */
      font-weight: bold;
      /* Bold text */
      width: 100%;
      /* Full-width button */
      transition: background-color 0.3s;
      /* Smooth background color transition */
    }

    .btn-primary:hover {
      background-color: #0056b3;
      /* Darker shade on hover */
    }

    .text-center a {
      color: #007bff;
      /* Link color */
      text-decoration: none;
      /* Remove underline */
    }

    .text-center a:hover {
      text-decoration: underline;
      /* Underline on hover */
    }

    @media (max-width: 576px) {
      .card {
        padding: 15px;
        /* Less padding on smaller screens */
      }

      .signup-icon {
        font-size: 2.5rem;
        /* Smaller icon size */
      }

      h1 {
        font-size: 1.8rem;
        /* Adjusted header size */
      }
    }
  </style>

  <div class="box">
    <div class="card">
      <div class="text-center mt-3">
        <h1><i class="fa-solid signup-icon fa-user-plus"></i> Sign Up</h1>
      </div>
      <div class="card-body">
        <form action="/signup" method="post" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" class="form-control" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a username.</div>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control" required />
            <div class="invalid-feedback">Please enter a valid email.</div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" required />
            <div class="invalid-feedback">Please enter a strong password.</div>
          </div>
          <div class="text-center mt-1">
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </div>
        </form>
        <div class="text-center mt-3">
          <p>Have an account? <a href="/login">Login</a></p>
        </div>
      </div>
    </div>
  </div>