<% layout('/layouts/boilerplate') -%>

  <style>
    /* Background color for the body */
    body {
      background-color: #f0f0f5;
      /* Softer background color */
      font-family: 'Arial', sans-serif;
      /* Better readability */
    }

    /* Responsive styling for mobile devices */
    @media only screen and (max-width: 800px) {
      .row>* {
        width: 100%;
        /* Ensures full width on smaller screens */
        padding: 0 15px;
      }

      .card {
        margin: 4rem 0 2rem 0;
        /* Adjust margins for smaller screens */
        padding: 30px;
        /* Reduce padding for better fit */
        height: auto;
        /* Remove fixed height for flexible content */
      }
    }

    /* Styling for the card container */
    .card {
      margin: 8rem 0 3rem 0;
      padding: 50px;
      border-radius: 10px;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
      /* Deeper shadow */
      background-color: #fff;
      /* Ensure background is white */
    }

    /* Styling for the login icon */
    .login-icon {
      background-color: #007bff;
      color: #fff;
      padding: 1.5rem;
      border-radius: 50%;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      /* Slight shadow for icon */
    }

    /* Form control inputs styling */
    .form-control {
      border: none;
      border-bottom: 2px solid #007bff;
      /* Match border color to theme */
      border-radius: 0;
      box-shadow: none;
      padding: 0.75rem 1rem;
      /* Slightly increase padding for better UX */
      transition: border-color 0.3s ease;
      background-color: transparent;
    }

    /* On focus for form inputs */
    .form-control:focus {
      border-color: #0056b3;
      box-shadow: none;
    }

    /* Placeholder text styling */
    .form-control::placeholder {
      color: #666;
      /* Softer color for placeholders */
    }

    /* Invalid feedback text */
    .invalid-feedback {
      color: #dc3545;
      font-size: 0.875rem;
      /* Make error text slightly smaller */
    }

    /* Button styling */
    .btn-primary {
      background-color: #007bff;
      border: none;
      border-radius: 0.35rem;
      color: #fff;
      padding: 0.75rem 1.25rem;
      /* Increase padding for better appearance */
      cursor: pointer;
      transition: background-color 0.3s ease, box-shadow 0.3s ease;
      box-shadow: 0 3px 6px rgba(0, 123, 255, 0.3);
      /* Button shadow */
    }

    /* Button hover effect */
    .btn-primary:hover {
      background-color: #0056b3;
      box-shadow: 0 4px 8px rgba(0, 86, 179, 0.4);
      /* Enhance hover shadow */
    }

    /* Card footer styling */
    .card-footer {
      text-align: center;
      margin-top: 1.5rem;
      font-size: 0.9rem;
    }

    /* Link styling */
    .card-footer a {
      color: #007bff;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    /* Link hover effect */
    .card-footer a:hover {
      color: #0056b3;
      text-decoration: underline;
    }
  </style>


  <div class="box">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="card">
          <div class="text-center mt-3">
            <h1><i class="fa-solid fa-user login-icon"></i></h1>
            <h3 class="mb-0">Login</h3>
          </div>
          <div class="card-body">
            <form action="/login" method="post" class="needs-validation" novalidate>
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required />
                <div class="invalid-feedback">Please enter a valid username.</div>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required />
                <div class="invalid-feedback">Please enter a password.</div>
              </div>
              <div class="text-center">
                <button class="btn btn-primary btn-block">Login</button>
              </div>
            </form>
          </div>
          <div class="text-center mb-3">
            <p>Don't have an account? <a href="/signup">Sign up</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>